<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/screen_background_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardToolbar"
        style="@style/Toolbard_Card">
        <include
            android:id="@+id/appTopToolbar"
            layout="@layout/toolbar" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/adViewBanner"
        android:layout_below="@+id/cardToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rlCustomNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tvCustomizeNotifications"
                        style="@style/Text_Dark_Grey"
                        android:text="@string/customize_notifications"
                        android:textSize="@dimen/textsize_16" />


                    <ImageView
                        style="@style/Icon_24DP"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/icon_arrow_right"
                        app:tint="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlBackupandRestore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tvBackupAndRestore"
                        style="@style/Text_Dark_Grey"
                        android:text="@string/backup_and_restore"
                        android:textSize="@dimen/textsize_16" />


                    <ImageView
                        style="@style/Icon_24DP"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/icon_arrow_right"
                        app:tint="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlLockScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tvLockScreenTitle"
                        style="@style/Text_Dark_Grey"
                        android:text="@string/lock_screen_visibility"
                        android:textSize="@dimen/textsize_16" />


                    <TextView
                        android:id="@+id/tvLockScreenDesc"
                        style="@style/Text_Blue"
                        android:layout_below="@+id/tvLockScreenTitle"
                        android:textSize="@dimen/textsize_12"
                        tools:text="@string/sender_and_message" />

                </RelativeLayout>

            </LinearLayout>


            <View
                style="@style/Devider_1PX"
                android:layout_marginVertical="@dimen/margin_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rlTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        style="@style/Text_Dark_Grey"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:text="@string/theme"
                        android:textSize="@dimen/textsize_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTheme"
                        style="@style/App_Switch"
                        android:layout_alignParentEnd="true"
                        android:clickable="false"
                        android:gravity="center_vertical" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        style="@style/Text_Dark_Grey"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:text="@string/use_english_language"
                        android:textSize="@dimen/textsize_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchLanguage"
                        style="@style/App_Switch"
                        android:layout_alignParentEnd="true"
                        android:clickable="false"
                        android:gravity="center_vertical" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        style="@style/Text_Dark_Grey"
                        android:layout_alignParentStart="true"
                        android:gravity="center_vertical"
                        android:text="@string/use_24_hour_time_format"
                        android:textSize="@dimen/textsize_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchTimeFormate"
                        style="@style/App_Switch"
                        android:layout_alignParentEnd="true"
                        android:clickable="false"
                        android:gravity="center_vertical" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlBlockedNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        style="@style/Text_Dark_Grey"
                        android:gravity="center_vertical"
                        android:text="@string/manage_blocked_numbers"
                        android:textSize="@dimen/textsize_16" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlFontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tvFontSizeTitle"
                        style="@style/Text_Dark_Grey"
                        android:gravity="center_vertical"
                        android:text="@string/font_size"
                        android:textSize="@dimen/textsize_16" />


                    <TextView
                        android:id="@+id/tvFontSizeDesc"
                        style="@style/Text_Blue"
                        android:layout_below="@+id/tvFontSizeTitle"
                        android:textSize="@dimen/textsize_12" />


                </RelativeLayout>

            </LinearLayout>

            <View
                style="@style/Devider_1PX"
                android:layout_marginVertical="@dimen/margin_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlCharacterCoundown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        style="@style/Text_Dark_Grey"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/switchCharacterCoundown"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingEnd="@dimen/margin_50"
                        android:text="@string/show_character_counter"
                        android:textSize="@dimen/textsize_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchCharacterCoundown"
                        style="@style/App_Switch"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:clickable="false" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDiacritic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        style="@style/Text_Dark_Grey"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/switchDiacritic"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingEnd="@dimen/margin_50"
                        android:text="@string/use_simple_characters"
                        android:textSize="@dimen/textsize_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDiacritic"
                        style="@style/App_Switch"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:clickable="false" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlDeliveryReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        style="@style/Text_Dark_Grey"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/switchDeliveryReport"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:paddingEnd="@dimen/margin_50"
                        android:text="@string/enable_delivery_reports"
                        android:textSize="@dimen/textsize_16" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchDeliveryReport"
                        style="@style/App_Switch"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:clickable="false" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlMMSFileSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tvMMSFileSizeTitle"
                        style="@style/Text_Dark_Grey"
                        android:text="@string/mms_file_size_limit"
                        android:textSize="@dimen/textsize_16" />


                    <TextView
                        android:id="@+id/tvMMSFileSizeDesc"
                        style="@style/Text_Blue"
                        android:layout_below="@+id/tvMMSFileSizeTitle"
                        android:textSize="@dimen/textsize_12"
                        tools:text="@string/mms_file_size_limit_none" />


                </RelativeLayout>

            </LinearLayout>

            <View
                style="@style/Devider_1PX"
                android:layout_marginVertical="@dimen/margin_2" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rlPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tvPolicy"
                        style="@style/Text_Dark_Grey"
                        android:text="@string/txt_privacy_policy"
                        android:textSize="@dimen/textsize_16" />


                    <ImageView
                        style="@style/Icon_24DP"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/icon_arrow_right"
                        app:tint="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlRateUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_8">

                    <TextView
                        android:id="@+id/tvRateUs"
                        style="@style/Text_Dark_Grey"
                        android:text="@string/txt_rateus"
                        android:textSize="@dimen/textsize_16" />


                    <ImageView
                        style="@style/Icon_24DP"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/icon_arrow_right"
                        app:tint="@color/black" />

                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/adViewBanner"
        style="@style/BannerAdsView" />

</RelativeLayout>


