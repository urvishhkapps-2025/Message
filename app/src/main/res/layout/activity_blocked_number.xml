<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/screen_background_color"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardToolbar"
        style="@style/Toolbard_Card">
        <include
            android:id="@+id/appTopToolbar"
            layout="@layout/toolbar" />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardToolbar">

        <com.hkapps.messagepro.views.CustomRecyclerView
            android:id="@+id/recyclerViewBlockNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ivThumbNodata"
                style="@style/Icon_200DP"
                android:src="@drawable/icon_placeholder"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNoData1"
                style="@style/Text_Regular"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"
                android:text="@string/not_blocking_anyone"
                android:textSize="@dimen/textsize_16"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvNoData2"
                style="@style/Text_Blue_Italic"
                android:gravity="center"
                android:padding="@dimen/margin_16"
                android:text="@string/add_a_blocked_number"
                android:textSize="@dimen/textsize_16"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
