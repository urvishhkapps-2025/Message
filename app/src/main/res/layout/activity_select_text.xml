<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/screen_background_color">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:padding="@dimen/margin_16"
        app:tint="@android:color/black"
        android:src="@drawable/icon_back" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardToolbar"
        android:layout_below="@+id/ivBanner"
        android:background="@color/screen_background_grey"
        android:padding="@dimen/margin_16">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollIndicators="none"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tvSelectMessageBody"
                style="@style/Text_Regular"
                android:layout_width="match_parent"
                android:autoLink="email|web|phone|map"
                android:gravity="top"
                android:justificationMode="inter_word"
                android:scrollbars="vertical"
                android:text="@string/app_name"
                android:textIsSelectable="true"
                android:textSize="@dimen/textsize_16" />

        </ScrollView>
    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardToolbar"
        style="@style/Toolbard_Card"
        android:layout_above="@+id/adViewBanner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginVertical="@dimen/margin_5"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llCopy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/logo_ripple_oval"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivPhotoGallery"
                    style="@style/Icon_24DP"
                    android:src="@drawable/icon_copy" />

                <TextView
                    style="@style/Text_Regular"
                    android:text="Copy"
                    android:textSize="@dimen/textsize_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/logo_ripple_oval"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Icon_24DP"
                    android:src="@drawable/icon_share" />

                <TextView
                    style="@style/Text_Regular"
                    android:text="Share"
                    android:textSize="@dimen/textsize_12" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:foreground="@drawable/logo_ripple_oval"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/Icon_24DP"
                    android:src="@drawable/icon_delete" />

                <TextView
                    style="@style/Text_Regular"
                    android:text="Delete"
                    android:textSize="@dimen/textsize_12" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:id="@+id/adViewBanner"
        style="@style/BannerAdsView" />

</RelativeLayout>
