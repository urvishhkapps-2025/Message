<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <RelativeLayout
            android:id="@+id/rlTopIcon"
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16"
            android:background="@drawable/logo_blue_circle"
            android:padding="@dimen/margin_5">

            <ImageView
                android:id="@+id/ivThumb"
                style="@style/Icon_64DP"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_sms" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/margin_50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_16"
            android:layout_marginEnd="@dimen/margin_16">

            <ImageView
                android:id="@+id/ivPinThumb"
                style="@style/Icon_16DP"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_pic_cross" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/rlTopIcon">

            <TextView
                android:id="@+id/tvConversationTitle"
                style="@style/Text_Regular"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tvDate"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:paddingEnd="@dimen/margin_16"
                android:textSize="@dimen/textsize_18"
                tools:text="VX-FMA09K" />

            <TextView
                android:id="@+id/tvDate"
                style="@style/Text_Grey"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/textsize_16"
                android:textSize="@dimen/textsize_12"
                tools:text="18:20" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlTitle"
            android:layout_toEndOf="@+id/rlTopIcon"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDraftIndicator"
                style="@style/Text_Blue_Italic"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingEnd="@dimen/margin_4"
                android:text="@string/txt_draft"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tvConversationDesc"
                style="@style/Text_Dark_Grey"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:paddingEnd="@dimen/margin_16"
                android:textSize="@dimen/textsize_14"
                tools:text="Hey, How are you!!" />

        </LinearLayout>


    </RelativeLayout>

    <View
        style="@style/Devider_1PX"
        android:layout_marginStart="@dimen/margin_70" />

</LinearLayout>
