<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    android:fitsSystemWindows="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardToolbar"
        style="@style/Toolbard_Card">

        <include
            android:id="@+id/appTopToolbar"
            layout="@layout/toolbar" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adViewBanner"
        android:layout_below="@+id/cardToolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollIndicators="none"
            android:scrollbars="vertical">

            <TextView
                android:id="@+id/tvSelectMessageBody"
                style="@style/Text_Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:autoLink="email|web|phone|map"
                android:justificationMode="inter_word"
                android:padding="@dimen/margin_16"
                android:scrollbars="vertical"
                android:text="@string/app_name"
                android:textIsSelectable="true"
                android:textSize="@dimen/textsize_18" />

        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adViewBanner"
        style="@style/BannerAdsView" />
</RelativeLayout>
