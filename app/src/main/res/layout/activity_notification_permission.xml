<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color">

    <RelativeLayout
        android:id="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:rotation="180"
            android:src="@drawable/ic_inro_button_bg" />

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/whiteColor"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_into_thumbs" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/lin_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:adjustViewBounds="true"
        android:padding="@dimen/margin_10"
        android:src="@mipmap/ic_launcher" />


    <LinearLayout
        android:id="@+id/linCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHead"
            style="@style/intro_Text1" />

        <TextView
            android:id="@+id/tvStr"
            style="@style/intro_Text2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linCenter"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSetAsDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_50"
            android:layout_marginVertical="@dimen/margin_30"
            android:background="@drawable/apk_button_main"
            android:elevation="@dimen/margin_5"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="Allow"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/textsize_16" />

        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_50"
            android:elevation="@dimen/margin_5"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:text="Skip"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16" />

    </LinearLayout>

</RelativeLayout>
